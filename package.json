{
  "name": "fisheye",
  "version": "1.0.0",
  "type": "module",
  "homepage": "https://steinshy.github.io/FishEye",
  "engines": {
    "node": ">=22.0.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "lint": "eslint . --ext .js && stylelint '**/*.css' --ignore-pattern '**/*.min.css' && html-validate '**/*.html'",
    "lint:js": "eslint . --ext .js",
    "lint:css": "stylelint '**/*.css' --ignore-pattern '**/*.min.css'",
    "lint:html": "html-validate '**/*.html'",
    "format:check": "prettier --write --check .",
    "server": "lsof -ti:8080 | xargs kill -9 2>/dev/null || true && http-server . -p 8080 --cors -c-1 --no-cache",
    "server:chrome": "lsof -ti:8080 | xargs kill -9 2>/dev/null || true && http-server . -p 8080 --cors -c-1 --no-cache & open -a \"Google Chrome\" http://localhost:8080",
    "markdown:lint": "markdownlint '**/*.md' --ignore node_modules",
    "minify:css": "cleancss -o assets/css/style.min.css assets/css/style.css && cleancss -o assets/css/photographer.min.css assets/css/photographer.css && cleancss -o assets/css/components.min.css assets/css/components.css && cleancss -o assets/css/medias.min.css assets/css/medias.css",
    "minify:js": "node scripts/minify.cjs js",
    "minify:html": "node scripts/minify.cjs html",
    "minify": "npm run minify:css && npm run minify:js && npm run minify:html"
  },
  "usage": {
    "setup": "npm install",
    "dev": "npm run server",
    "lint": "npm run lint",
    "format": "npm run format:check",
    "minify": "npm run minify",
    "server": "npm run server",
    "lint:all": "npm run lint",
    "lint:js": "npm run lint:js",
    "lint:css": "npm run lint:css",
    "lint:html": "npm run lint:html"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/js": "^9.34.0",
    "clean-css-cli": "^5.6.3",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-html": "^8.1.3",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsdoc": "^56.1.2",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-security": "^3.0.1",
    "glob": "^11.0.3",
    "husky": "^9.0.11",
    "lint-staged": "^16.1.5",
    "markdownlint-cli": "^0.45.0",
    "minify": "^14.1.0",
    "prettier": "^3.2.5",
    "stylelint": "^16.2.1",
    "stylelint-config-standard": "^39.0.0",
    "stylelint-order": "^7.0.0"
  },
  "dependencies": {
    "html-validate": "^9.0.0",
    "http-server": "^14.1.1"
  }
}
