{
  "name": "fisheye",
  "version": "1.0.0",
  "type": "module",
  "homepage": "https://steinshy.github.io/FishEye",
  "engines": {
    "node": ">=22.0.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "dev": "http-server . -p 8080 -g -c10 --brotli --gzip",
    "format": "prettier --write --check .",
    "lint": "npm run lint:js && npm run lint:css && npm run lint:html",
    "lint:js": "eslint . --ext .js",
    "lint:css": "stylelint '**/*.css' --ignore-pattern '**/*.min.css'",
    "lint:html": "html-validate '**/*.html'",
    "minify": "npm run minify:css && npm run minify:js && npm run minify:html",
    "minify:css": "lightningcss --minify --targets '> 0.5%, last 2 versions' assets/css/*.css",
    "minify:js": "node scripts/minify.cjs js",
    "minify:html": "node scripts/minify.cjs html",
    "optimize:images": "node scripts/optimizeImages.cjs desktop && node scripts/optimizeImages.cjs mobile"
  },
  "dependencies": {
    "html-validate": "^9.0.0",
    "http-server": "^14.1.1",
    "sharp": "^0.33.5"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/js": "^9.34.0",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-html": "^8.1.3",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsdoc": "^56.1.2",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-security": "^3.0.1",
    "glob": "^11.0.3",
    "husky": "^9.0.11",
    "lighthouse": "^12.8.2",
    "lightningcss-cli": "^1.30.2",
    "lint-staged": "^16.1.5",
    "minify": "^14.1.0",
    "prettier": "^3.2.5",
    "stylelint": "^16.2.1",
    "stylelint-config-standard": "^39.0.0",
    "stylelint-order": "^7.0.0"
  }
}
