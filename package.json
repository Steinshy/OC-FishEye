{
  "name": "fisheye",
  "version": "1.0.0",
  "description": "FishEye photography website - A modern portfolio showcasing professional photography with interactive galleries and responsive design",
  "type": "module",
  "main": "index.html",
  "homepage": "https://steinshy.github.io/FishEye",
  "repository": {
    "type": "git",
    "url": "https://github.com/steinshy/FishEye.git"
  },
  "keywords": ["photography", "portfolio", "gallery", "responsive", "accessibility", "vanilla-js", "html5", "css3"],
  "author": {
    "name": "Steinshy",
    "url": "https://github.com/steinshy"
  },
  "license": "MIT",
  "engines": {
    "node": ">=22.0.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "lint": "eslint . --ext .js && stylelint '**/*.css' && html-validate '**/*.html'",
    "lint:fix": "eslint . --ext .js --fix && stylelint '**/*.css' --fix && html-validate '**/*.html' --fix",
    "lint:js": "eslint . --ext .js",
    "lint:js:fix": "eslint . --ext .js --fix",
    "lint:css": "stylelint '**/*.css'",
    "lint:css:fix": "stylelint '**/*.css' --fix",
    "lint:html": "html-validate '**/*.html'",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "server": "http-server . -p 8080 --cors -o -c-1 --no-cache",
    "markdown:lint": "markdownlint '**/*.md' --ignore node_modules",
    "prepare": "husky install",
    "pre-commit": "lint-staged"
  },
  "usage": {
    "setup": "npm install",
    "dev": "npm run server",
    "lint": "npm run lint",
    "fix": "npm run lint:fix",
    "format": "npm run format"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/js": "^9.34.0",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-html": "^8.1.3",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsdoc": "^56.1.2",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-security": "^3.0.1",
    "husky": "^9.0.11",
    "lint-staged": "^16.1.5",
    "markdownlint-cli": "^0.45.0",
    "prettier": "^3.2.5",
    "stylelint": "^16.2.1",
    "stylelint-config-standard": "^39.0.0",
    "stylelint-order": "^7.0.0"
  },
  "dependencies": {
    "html-validate": "^9.0.0",
    "http-server": "^14.1.1"
  }
}
